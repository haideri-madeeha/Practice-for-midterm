def create_a_diamond_shape(n):
    result = ""

    if n % 2 == 0:
        return "This is not an odd number."

    for i in range(n):
        if i >= (int(n / 2)):
            result += ' ' * ((int(n / 2) - i) * - 1)

            result += '*' * (n - 2 * ((int(n / 2) - i) * - 1)) + '\n'

        else:
            for k in range (int(n / 2) - i):
                result += " "

            for l in range(2 * i + 1):
                result += '*'
        
            result += '\n'

    return result.rstrip()

#print(create_a_diamond_shape(9))