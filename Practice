def create_a_diamond_shape(n):
    result = ""

    if n % 2 == 0:
        return "This is not an odd number."

    for i in range(n):
        if i >= (int(n / 2)):
            result += ' ' * ((int(n / 2) - i) * - 1)

            result += '*' * (n - 2 * ((int(n / 2) - i) * - 1)) + '\n'

        else:
            for k in range(int(n / 2) - i):
                result += " "

            for l in range(2 * i + 1):
                result += '*'
        
            result += '\n'

    return result.rstrip()

# print(create_a_diamond_shape(7))

def create_hollow_diamond(n):
    result = ""

    star = "*"
    space = " "

    if n % 2 == 0:
        return "This is not an odd number."

    for i in range(n):
        if i >= (int(n / 2 + 1)):
            if i == n - 1:
                result += space * int(n / 2) + star + '\n'

            else:
                result += space * ((int(n / 2) - i) * - 1)

                result += star + space * ((n - 2) - (2 * (i - (int(n / 2)))))

                result += star + '\n'

        else:
            if i == 0:
                result += space * int(n / 2) + star + '\n'

            else:
                result += space * (int(n / 2) - (i))
        
                result += star + space * (2 * (i - 1) + 1) + star + '\n'

    return result.rstrip()

# print(create_hollow_diamond(7))

def create_circular_shape(n):
    result = ""

    star = "*"
    space = " "

    if n % 2 == 0:
        return "This is not an odd number."
    
    if n == 1:
        return "Insufficient range number."

    for i in range(n):
        if i == 0 or i == n - 1:
            result += space * int(n / 2)
            
            result += 2 * star + '\n'

        elif i == 1 or i == n - 2:
            result += space * (int(n / 2) - 1)

            result += star + 2 * space + star + '\n'
            
        else:
            if i >= 2 and i < (int(n / 2) + 1):
                result += space * (int(n / 2) - i)

                result += 2 * star + space * (2 * (i - 1)) + 2 * star + '\n'
    
            else:
                if i >= (int(n / 2) + 1) and i < n - 2:
                    result += space * ((int(n / 2) - i) * - 1)

                    result += 2 * star + space * ((n - 3) - 2 * (i - (int(n / 2)))) + 2 * star + '\n'

    return result.rstrip()

print(create_circular_shape(7))